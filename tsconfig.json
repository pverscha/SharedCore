{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "esnext",
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationDir": "./dist",
    "types": [
      "node",
      "vite/client",
      "@types/jest",
      "@types/fnv-plus"
    ]
  },
  "include": ["src", "vitest-extensions.d.ts"],
  "exclude": ["node_modules", "dist"]
}